{
  "expo": {
    "name": "Antenna Analyzer",
    "slug": "antenna-analyzer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "antenna-analyzer",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "description": "Professional antenna design and analysis tool for ham radio operators. Calculate SWR, gain, radiation patterns, and optimize antenna configurations.",
    "githubUrl": "https://github.com/antenna-analyzer",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.antennaanalyzer.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Scan QR codes for antenna configurations",
        "NSPhotoLibraryUsageDescription": "Save antenna diagrams to gallery"
      }
    },
    "android": {
      "package": "com.antennaanalyzer.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#121212"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.antennaanalyzer.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "Antenna Analyzer",
      "shortName": "Antenna",
      "description": "Professional antenna design and analysis tool",
      "themeColor": "#121212",
      "backgroundColor": "#121212",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "scope": "/"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#121212"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "antenna-analyzer"
      }
    }
  }
}
